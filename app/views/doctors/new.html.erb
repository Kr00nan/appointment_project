<h1>Join our Team!</h1>
<%= form_with(model: @doctor, local: true, class: "ui form" ) do |f| %>
  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, required: true %>
  </div>

  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, required: true %>
  </div>

  <div class="field">
    <%= f.label :specialty %>
    <%= f.text_field :specialty, required: true %>
  </div>
  <%= f.submit "Heck, yeah! I'm a doctor now!", class: "ui blue button" %>
  <%= link_to 'Nevermind', doctors_path %>
<% end %>